/*******************************
         Site Overrides
*******************************/

.ui.empty.circular.labels .label,
.ui.empty.circular.label {
    font-size: 0.5rem;
}

.ui.mini.labels .label, .ui.mini.label {
    font-size: .375rem;
}

.ui.label .ui.empty.circular.label {
    margin-right: 8px!important;
}

.ui.label.icon {
  padding: 8px calc(@horizontalPadding/2) 8px @horizontalPadding;
}

/* small */
.ui.label.small {
  padding: 7px @horizontalPadding;
}

.ui.label.small.icon {
  padding: 4px calc(@horizontalPadding/2) 4px @horizontalPadding;
}

// large
.ui.label.large{
  padding: 15px @horizontalPadding;
}

.ui.label.basic.large {
  padding: 7px @horizontalPadding;
}

.ui.label.basic {
  padding: 9px @horizontalPadding;
}

.ui.label.basic.short {
  padding: 5px @horizontalPadding;
}

.ui.label.large.icon {
    padding: 12px calc(@horizontalPadding/2) 12px @horizontalPadding;
}

.ui.label.large.basic.icon {
    padding: 10px calc(@horizontalPadding/2) 10px @horizontalPadding;
}

.ui.label {
    display: inline-flex!important;
    align-items: center;
}

.ui.label.large {
    min-height: 48px
}

.ui.label {
    min-height: 40px
}

.ui.label.small {
    min-height: 32px
}